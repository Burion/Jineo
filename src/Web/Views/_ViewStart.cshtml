@{
    @using Jineo.Extentions
    if(!this.User.Identity.IsAuthenticated)
    {
        Layout = "/Views/Shared/_LayoutGuest.cshtml";
    }
    else
    if(this.User.IsInRole("Banned"))
    {
        Layout = "/Views/Shared/_BannedLayout.cshtml";
    }
    else
    if(this.User.IsInRole("SuperAdmin"))
    {
        Layout = "/Views/Shared/_LayoutSuperAdmin.cshtml";
    }
    else
    if(this.User.IsInRole("Insure"))
    {
        Layout = "/Views/Shared/_LayoutInsure.cshtml";
    }
    else
    {
        Layout = "/Views/Shared/_Layout.cshtml";
    }
    
}
