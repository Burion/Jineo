
@model Jineo.ViewModels.StoreModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>Document</title>
</head>
<body>
    <div class="container">
        <div>
            <div class="m-2">
                <label>Search</label>
                <input class="form-control" type="text">
            </div>
            <div class="m-2">
                <label>What we are searching:</label>
                <div class="">
                    <div class="d-inline align-content-center m-2">
                        <input id="temperature" type="checkbox">
                        <label for="">Temperature</label>
                    </div>
                    <div class="d-inline align-content-center m-2">
                        <input id="temperature" type="checkbox">
                        <label for="">Pressure</label>
                    </div>
                </div>
            </div>
        </div>
        <div class="row justify-content-sm-center">
            @foreach(var item in Model.Products)
            {
                <div class="col-3 m-3 item-store" onclick="window.location='http://google.com'" >
                    <div class="p-3 text-center">
                        <div>
                            <div class="item-image" style="background-image: url('@item.Image');"></div>
                        </div>
                        <div class="d-flex justify-content-between">
                            <label class="text-muted" for="">Temperature</label>
                            <div class="">
                                <i class="glyphicon glyphicon-star text-muted" aria-hidden="true"></i>
                                <i class="glyphicon glyphicon-star text-muted" aria-hidden="true"></i>
                                <i class="glyphicon glyphicon-star text-muted" aria-hidden="true"></i>
                                <i class="glyphicon glyphicon-star text-muted" aria-hidden="true"></i>
                                <i class="glyphicon glyphicon-star-empty text-muted" aria-hidden="true"></i>
                            </div>
                        </div>
                        <h4>@item.Name</h4>
                        <div>
                            <p class="hideOverflow">@item.Description</p>
                        </div>
                        <hr>
                    </div>
                    
                </div>
            }
            
        </div>
    </div>
</body>
</html>