
@model Jineo.ViewModels.StoreModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>Document</title>
</head>
<body>
    <div class="container">
        
        <div class="row justify-content-sm-center">
            @foreach(var item in Model.Products)
            {
                <div class="col-3 m-3 item-store" onclick="window.location='/home/store/@item.Id'" >
                    <div class="p-3 text-center">
                        <div>
                            <div class="item-image" style="background-image: url('@item.Image');"></div>
                        </div>
                        <div class="d-flex justify-content-between">
                            <label class="text-muted" for="">@((SensorType)item.ProductTypeId)</label>
                            <div class="">
                                @for(int x = 0; x < 5; x++)
                                {
                                    if(x < item.AvgMark)
                                    {
                                        <i class="glyphicon glyphicon-star text-muted" aria-hidden="true"></i>
                                    }
                                    else
                                    {
                                        <i class="glyphicon glyphicon-star-empty text-muted" aria-hidden="true"></i>
                                    }
                                }
                            </div>
                        </div>
                        <h4>@item.Name</h4>
                        <div>
                            <p class="hideOverflow">@item.Description</p>
                        </div>
                        <hr>
                    </div>
                    
                </div>
            }
            
        </div>
    </div>
</body>
</html>