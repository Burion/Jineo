@using Jineo.ViewModels
@model AddEmployee

<div id="addemployee">
    <form asp-antiforgery="true" asp-action="AddUserToCompany">
        <div  class="validation" asp-validation-summary="All"></div>
        <label asp-for="Email">Email</label>
        <input asp-for="Email">
        <span asp-validation-for="Email"></span>
        <input class="form-control" type="submit" name="" value="+">
    </form>
</div>

<button class="btn btn-primary" onclick="expand()">show</button>

<script>
    function expand(){
        var block = document.getElementById("addemployee").hidden = false
    }
</script>

@section scripts{ 
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}