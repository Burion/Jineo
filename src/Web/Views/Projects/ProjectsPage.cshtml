
@using Jineo.ViewModels

@using Jineo.Helpers

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    
    <div class="container-flex">
        <div class="card-shadow container-40">
            <div class="card-header card-header-city">
                My projects
            </div>
            <div class="card-body container-100">
                    @Html.Partial("_ProjectsListPartial", new PartialModel() { Id = -1 })
            </div>
        </div>
        <div style="display: flex;">
            <div class="card-shadow container-100">
                <div class="card-header card-header-city container-100">
                    Info
                </div>
                <div class="card-body container-100">
                    @Html.Partial("_ProjectInfoPartial", new PartialModel() { Id = -1, ReadOnly = true })
                    @Html.Partial("_UsersListPartial", new PartialModel() { Id = -1, ReadOnly = true })
                    @Html.Partial("_IssuesPartial", new PartialModel() { Id = -1, ReadOnly = true })
                </div>  
            </div>
            
        </div>   
    </div>
</body>
<script>
    window.onload = function(){
        loadProjects()
    }
</script>
</html>